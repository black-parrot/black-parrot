lint.v: $(HDL_SOURCE)
	$(VCS) $(VCS_OPTIONS) $(LINT_OPTIONS) -top bp_be_top $(HDL_SOURCE) 

load_rom.v: $(HDL_SOURCE)
	if [ "$(TEST_ROM_C)" != "$(LOAD_ROM_C)" ]; then						    \
		ln -sf $(TB_PATH)/rom/$(TEST_ROM_C) $(TB_PATH)/rom/$(LOAD_ROM_C);	\
	fi;

%.build.v: $(HDL_SOURCE) load_rom.v
	$(eval include $(VTB_PATH)/$*/Makefile.frag)			         	    \
	$(VCS) $(VCS_OPTIONS) -o $(VTB_PATH)/$*/simv -top test_bp               \
		$(HDL_SOURCE) $(HDL_PARAMS) $(TEST_SOURCE) $(VTB_PATH)/$*/test_bp.v

%.run.v: %.build.v
	$(eval include $(VTB_PATH)/$*/Makefile.frag)
	cd $(VTB_PATH)/$* && 				     			      \
	$(VTB_PATH)/$*/simv $(SIM_OPTIONS)                        \
		> $(VTB_PATH)/$*/$(basename $(TEST_ROM_C))_simout.txt
	
%.clean.v:
	cd $(VTB_PATH)/$* 		;\
		rm -rf DVEfiles	    ;\
		rm -rf simv*        ;\
		rm -rf *.old        ;\
		rm -rf *.tcl        ;\
		rm -rf inter.vpd    ;\
		rm -rf ucli.key    

